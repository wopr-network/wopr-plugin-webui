{
	"$schema": "https://biomejs.dev/schemas/2.4.3/schema.json",
	"files": {
		"includes": ["src/**", "tests/**"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noExplicitAny": "off"
			},
			"a11y": {
				"noSvgWithoutTitle": "off",
				"useButtonType": "off",
				"noLabelWithoutControl": "off"
			},
			"style": {
				"noNonNullAssertion": "off"
			},
			"correctness": {
				"useParseIntRadix": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "always"
		}
	}
}
