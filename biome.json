{
	"$schema": "https://biomejs.dev/schemas/2.4.2/schema.json",
	"files": {
		"includes": ["src/**/*.ts", "src/**/*.tsx"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noExplicitAny": "off"
			},
			"a11y": {
				"noSvgWithoutTitle": "off",
				"useButtonType": "off",
				"noLabelWithoutControl": "off"
			},
			"style": {
				"noNonNullAssertion": "off"
			},
			"correctness": {
				"useParseIntRadix": "off"
			}
		}
	}
}
