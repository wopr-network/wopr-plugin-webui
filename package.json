{
  "dependencies": {
    "@kobalte/core": "^0.13.0",
    "@wopr-network/plugin-types": "^0.2.0",
    "solid-js": "^1.9.0"
  },
  "description": "Web UI plugin for WOPR - SolidJS-based dashboard for sessions, plugins, and configuration",
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@types/node": "^25.3.2",
    "autoprefixer": "^10.4.27",
    "postcss": "^8.4.0",
    "tailwindcss": "^4.2.1",
    "typescript": "^5.0.0",
    "vite": "^7.3.1",
    "vite-plugin-solid": "^2.10.0",
    "vitest": "^4.0.18"
  },
  "main": "dist-plugin/plugin.js",
  "types": "dist-plugin/plugin.d.ts",
  "name": "@wopr-network/wopr-plugin-webui",
  "scripts": {
    "build": "vite build && tsc -p tsconfig.plugin.json",
    "build:ui": "vite build",
    "build:plugin": "tsc -p tsconfig.plugin.json",
    "check": "biome check src/plugin.ts tests/ && tsc -p tsconfig.plugin.json --noEmit",
    "dev": "vite",
    "format": "biome format --write src/plugin.ts tests/",
    "lint": "biome check src/plugin.ts tests/",
    "lint:fix": "biome check --fix src/plugin.ts tests/",
    "preview": "vite preview",
    "test": "vitest run",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc -p tsconfig.plugin.json --noEmit"
  },
  "type": "module",
  "version": "0.2.0",
  "wopr": {
    "minVersion": "1.0.0",
    "provides": [
      "webui"
    ],
    "type": "plugin"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "dist-plugin"
  ],
  "release": {
    "extends": "@wopr-network/semantic-release-config"
  }
}
